             x:Class="sevillaMath.Video1"
             Title="Video1">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">

            <Label Text="Video Educativo de Integrales explícitas"
                   FontSize="24"
                   TextColor="Black"
