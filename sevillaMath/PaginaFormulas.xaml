               FontSize="15"
               FontFamily="Lora"
               TextColor="Black"
               FontAttributes="Bold"
               HorizontalOptions="FillAndExpand"
               VerticalOptions="End"/>
                <Image Source="ipp.png" />
                
                <Label Grid.Row="0"
               Text="Sustitución Trigonométrica"
               Margin="10"
