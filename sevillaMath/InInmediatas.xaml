                <Label Text="1. Resuelve la integral: ∫ x^2 dx"
                       FontSize="14"
                       TextColor="Black"
                       HorizontalOptions="Start"
                       VerticalOptions="Center"
                       Padding="10,10"/>
                
                <Button Text="Ver Resultado"
