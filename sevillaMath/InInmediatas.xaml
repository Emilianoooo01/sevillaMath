                        Margin="10,0,0,0"/>

                <Label x:Name="VerDos"
                       Text="La respuesta es: e^x + C "
                       TextColor="Green"
                       FontSize="14"
                       IsVisible="False"
                       HorizontalOptions="Start"
                       Margin="10,0,0,0"/>

                <Label Text="Formulario"
                       FontSize="20"
